<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Proyecto2p.BienvenidosController">
    <children>
        <ImageView fx:id="imagenfondo" fitHeight="400.0" fitWidth="600.0" preserveRatio="false" />
        <VBox layoutY="141.0" prefHeight="165.0" prefWidth="300.0" spacing="10">
            <Label fx:id="lblwelcome">            
            <padding>
               <Insets bottom="45.0" left="30.0" />
            </padding>
            <VBox.margin>
               <Insets />
            </VBox.margin></Label>
            <Button fx:id="btnlocation" onAction="#EncuentraNuestrosLocales" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: linear-gradient(to bottom, #ffde59, #ff914d);" text="Encuentra nuestros locales">
            <VBox.margin>
               <Insets left="65.0" />
            </VBox.margin>
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
            <Button fx:id="btnhacerpedido" onAction="#HazTuPedido" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: linear-gradient(to bottom, #ffde59, #ff914d);" text="Haz tu pedido">
            <VBox.margin>
               <Insets left="65.0" />
            </VBox.margin>
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
        </VBox>
        <VBox fx:id="vbpedidos" layoutX="200.0" layoutY="20.0" prefHeight="200.0" prefWidth="200.0" visible="false">
            <ListView fx:id="lvpedidos" prefHeight="600.0" prefWidth="400.0" />
        </VBox>
    </children>
</AnchorPane>
